			  <div class="FullCode">
			  	<div class="highlight"><pre><span class="kn">import</span> <span class="nx">ballerina</span><span class="p">.</span><span class="nx">lang</span><span class="p">.</span><span class="nx">system</span><span class="p">;</span><span class="nx">xmlns</span> <span class="s">&quot;http://ballerina.com/aa&quot;</span> <span class="k">as</span> <span class="nx">ns0</span><span class="p">;</span><span class="kd">function</span> <span class="nx">main</span> <span class="p">(</span><span class="kt">string</span><span class="p">[]</span> <span class="nx">args</span><span class="p">)</span> <span class="p">{</span>
    <span class="kt">xml</span> <span class="nx">x1</span> <span class="p">=</span> <span class="kt">xml</span> <span class="s">`&lt;ns0:book ns0:status=&quot;available&quot; count=&quot;5&quot;/&gt;`</span><span class="p">;</span>
    <span class="nx">system</span><span class="p">:</span><span class="nb">println</span><span class="p">(</span><span class="nx">x1</span><span class="p">);</span>
    <span class="nx">system</span><span class="p">:</span><span class="nb">println</span><span class="p">(</span><span class="nx">x1</span><span class="err">@</span><span class="p">[</span><span class="nx">ns0</span><span class="p">:</span><span class="nx">status</span><span class="p">]);</span>
    <span class="kt">string</span> <span class="nx">s</span> <span class="p">=</span> <span class="nx">x1</span><span class="nd">@[&quot;{</span><span class="nx">http</span><span class="p">:</span><span class="c1">//ballerina.com/aa}status&quot;];</span>
    <span class="nx">system</span><span class="p">:</span><span class="nb">println</span><span class="p">(</span><span class="nx">s</span><span class="p">);</span>
    <span class="nx">system</span><span class="p">:</span><span class="nb">println</span><span class="p">(</span><span class="nx">x1</span><span class="err">@</span><span class="p">[</span><span class="s">&quot;count&quot;</span><span class="p">]);</span>
    <span class="kt">string</span> <span class="nx">attributeName</span> <span class="p">=</span> <span class="s">&quot;count&quot;</span><span class="p">;</span>
    <span class="nx">system</span><span class="p">:</span><span class="nb">println</span><span class="p">(</span><span class="nx">x1</span><span class="err">@</span><span class="p">[</span><span class="nx">attributeName</span><span class="p">]);</span>
    <span class="nx">x1</span><span class="err">@</span><span class="p">[</span><span class="nx">ns0</span><span class="p">:</span><span class="nx">status</span><span class="p">]</span> <span class="p">=</span> <span class="s">&quot;Not Available&quot;</span><span class="p">;</span>
    <span class="nx">system</span><span class="p">:</span><span class="nb">println</span><span class="p">(</span><span class="nx">x1</span><span class="err">@</span><span class="p">[</span><span class="nx">ns0</span><span class="p">:</span><span class="nx">status</span><span class="p">]);</span>
